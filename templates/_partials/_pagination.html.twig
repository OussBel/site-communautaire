{% if pages > 1 %}
    <nav aria-label="Page navigation" class="d-flex justify-content-center mt-5">
        <ul class="pagination">
            {% if page > 1 %}
                <li class="page-item">
                    <a class="page-link font-weight-bold"
                       href="{{ path('app_trick', {slug: trick.slug, page: currentPage - 1 }) }}">
                        &lt;
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link font-weight-bold">
                        &lt;
                    </a>
                </li>
            {% endif %}

            {% if page < pages %}
                <li class="page-item">
                    <a class="page-link font-weight-bold"
                       href="{{ path('app_trick', {slug: trick.slug, page: currentPage + 1 }) }}">
                        &gt;
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link font-weight-bold">
                        &gt;
                    </a>
                </li>
            {% endif %}

        </ul>
    </nav>
{% endif %}
